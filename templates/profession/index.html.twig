{% extends 'base.html.twig' %}

{% block title %}Profession
{% endblock %}

{% block body %}

	<div class="container-fluid my-3">
		<div class="row">
			<div class="col">
				<div class="card">
					<div class="card-header d-flex justify-content-between">
						<h5>Profession</h5>
						<div>
							<a href="{{ path('app_profession_new') }}" class="btn btn-primary">Add</a>
						</div>
					</div>
					<div class="card-body">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th>Id</th>
									<th>Name</th>
									<th>Status</th>
									<th>Description</th>
									<th>CreatedAt</th>
									<th>UpdatedAt</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for profession in professions %}
									<tr>
										<td>{{ profession.id }}</td>
										<td>{{ profession.name }}</td>
										<td>{{ profession.status }}</td>
										<td>{{ profession.description }}</td>
										<td>{{ profession.createdAt ? profession.createdAt|date('Y-m-d H:i:s') : '' }}</td>
										<td>{{ profession.updatedAt ? profession.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
										<td>
											<div class="d-flex">
												<div>
													<a href="{{ path('app_profession_edit', {'id': profession.id}) }}">
														<button class="btn btn-outline-primary btn-sm">Edit</button>
													</a>
												</div>
												<div>
													{{ include('profession/_delete_form.html.twig') }}
												</div>
											</div>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="7">No records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
