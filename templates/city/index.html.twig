{% extends 'base.html.twig' %}

{% block title %}City
{% endblock %}

{% block body %}

	<div class="container-fluid my-3">
		<div class="row">
			<div class="col">
				<div class="card">
					<div class="card-header d-flex justify-content-between">
						<h5>City</h5>
						<div>
							<a href="{{ path('app_city_new') }}" class="btn btn-primary">Add</a>
						</div>
					</div>
					<div class="card-body">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th>Id</th>
									<th>ArName</th>
									<th>FrName</th>
									<th>status</th>
									<th>CreatedAt</th>
									<th>UpdatedAt</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for city in cities %}
									<tr>
										<td>{{ city.id }}</td>
										<td>{{ city.arName }}</td>
										<td>{{ city.frName }}</td>
										<td>{{ city.status }}</td>
										<td>{{ city.createdAt ? city.createdAt|date('Y-m-d H:i:s') : '' }}</td>
										<td>{{ city.updatedAt ? city.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
										<td>
											<div class="d-flex">
												<div>
													<a href="{{ path('app_city_edit', {'id': city.id}) }}">
														<button class="btn btn-outline-primary btn-sm">Edit</button>
													</a>
												</div>
												<div>
													{{ include('city/_delete_form.html.twig') }}
												</div>
											</div>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="7">No records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
